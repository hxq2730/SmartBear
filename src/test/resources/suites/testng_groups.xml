<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Test group">
    <test name="Run smoke test">
        <groups>
            <run>
                <include name="smoke"/>
                <exclude name="broken"/>
            </run>
        </groups>
    </test>

    <test name="Run new group">
        <groups>
            <define name="AllDaily">
                <include name="smoke"/>
                <include name="regression"/>
            </define>
            <run>
                <include name="AllDaily"/>
            </run>
        </groups>
    </test>

    <test name="Run smoke testa">
        <classes>
            <class name="org.example.tests.GroupExampleTest"/>
        </classes>
    </test>

</suite>
